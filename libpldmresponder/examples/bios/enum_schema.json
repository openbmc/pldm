{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/openbmc/pldm/blob/master/libpldmresponder/examples/bios/enum_schema.json",
  "title": "JSON schema for Bios enumeration type files",
  "type": "object",
  "properties": {
    "entries": {
      "$ref": "#/definitions/entries"
    }
  },
  "definitions": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "attribute_name": {
            "$ref": "#/definitions/attribute_name"
          },
          "possible_values": {
            "$ref": "#/definitions/possible_values"
          },
          "default_values": {
            "$ref": "#/definitions/default_values"
          },
          "dbus": {
            "$ref": "#/definitions/dbus"
          }
        },
        "required": [
          "attribute_name",
          "possible_values",
          "default_values"
        ]
      }
    },
    "attribute_name": {
      "type": "string"
    },
    "possible_values": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "default_values": {
      "$ref": "#/definitions/possible_values",
      "minItems": 1
    },
    "dbus": {
      "type": "object",
      "properties": {
        "object_path": {
          "$ref": "#/definitions/object_path"
        },
        "interface": {
          "$ref": "#/definitions/interface"
        },
        "property_name": {
          "$ref": "#/definitions/property_name"
        },
        "property_type": {
          "$ref": "#/definitions/property_type"
        },
        "property_values": {
          "type": "array",
          "items": {
            "minItems": 2
          }
        }
      },
      "required": [
        "object_path",
        "interface",
        "property_name",
        "property_type",
        "property_values"
      ]
    },
    "object_path": {
      "type": "string",
      "pattern": "^/[a-zA-Z0-9_]+"
    },
    "interface": {
      "type": "string",
      "pattern": "[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+$"
    },
    "property_name": {
      "type": "string"
    },
    "property_type": {
      "enum": [
        "bool",
        "uint8_t",
        "int16_t",
        "uint16_t",
        "int32_t",
        "uint32_t",
        "int64_t",
        "uint64_t",
        "double",
        "string"
      ]
    }
  }
}						 
