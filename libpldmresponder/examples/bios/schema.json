{
   "$schema": "http://json-schema.org/schema#",
   "$id": "https://github.com/openbmc/pldm/blob/master/libpldmresponder/examples/bios/schema.json",
   "title": "JSON schema for Bios enumeration type files",
   "type":"object",
   "properties":{
	  "entries":{
		"$ref": "#/definitions/entries"
	            }
		},
           "definitions":
	    {
	       "entries":
		    {
                     "type":"array",
	             "items":
		           {
		            "type":"object",
			    "properties":
			   {
                               "attribute_name": {"$ref": "#/definitions/attribute_name"},
				"possible_values": {"$ref":"#/definitions/possible_values"},
				"default_values":{"$ref": "#/definitions/default_values"},
				"dbus":{"$ref": "#/definitions/dbus" },
			   },
			   "required":["attribute_name","possible_values","default_values"]
                           }
                    },
                    "attribute_name":
                     {
		        "type":"string"
		     },
	            "possible_values":
                     {
                       "type":"array",
	               "items":
                          {
                           "type":"string"
                          },
		        "minItems":2
		      },
		    "default_values":
		      {
		         "$ref": "#/definitions/possible_values",
                         "minItems":1
                       },
                      "dbus":
		       {
			"type":"object",
			"properties":
			      {
		                "object_path":{"$ref": "#/definitions/object_path"},
                                "interface":{"$ref": "#/definitions/interface"},
		                "property_name":{"$ref": "#/definitions/property_name"},
				 "property_type":{"$ref": "#/definitions/property_type"},
			        "property_values":{"$ref": "#/definitions/property_values"}
			      },
                      "required":["object_path","interface","property_name","property_type","property_values"]
		       },
                      "object_path":
                     {
                       "type":"string",
                       "pattern":"^/[a-zA-Z0-9_]+"
                     },
                    "interface":
                     {
                       "type":"string",
	               "pattern":"[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+$"
                     },
                     "property_name":
                     {
		       "type":"string"
		     }
                     "property_type":
		     {
	               "enum":["bool","uint8_t","int16_t","uint16_t","int32_t","uint32_t","int64_t","uint64_t","double","string"},
                     }
                    "property_values":
                     {
                       "type":"array",
                       "items":
	                 {
		           "$ref": "#/definitions/prop_types"
	                  },
		       "minItems":2
		     },

                    "prop_types":
                     {
                       "anyOf":[
				{
			        "if":{"properties": {"property_type":{ "const":"bool"}}
				     },
				"then":{
				      "properties":{"property_values":{"type":"boolean"}}
	      			     }	  
				 },

                               {
				   "if":{"properties": {"property_type":{ "const":"uint8_t"}}
				        },
				 "then":{
				          "properties":{"property_values":{"type":"integer"}}
					 }	  
					 },

                              {	   
			          "if":{"properties": {"property_type":{ "const":"int16_t"}}
				       },
				  "then":{
				        "properties":{"property_values":{"type":"integer"}}
					     }		  
					 },

                              {		 
			          "if":{"properties": {"property_type":{ "const":"uint16_t"}}
				       },
				 "then":{
			                 "properties":{"property_values":{"type":"integer"}}
				        }		  
				 },
                             {		 
			          "if":{"properties": {"property_type":{ "const":"uint32_t"}}
				        },
				  "then":{
					"properties":{"property_values":{"type":"integer"}}
					 }		  
		              },
                             {		 
			          "if":{"properties": {"property_type":{ "const":"int32_t"}}
				       },
				  "then":{
				      "properties":{"property_values":{"type":"integer"}}
	 			     }		  
			     },
                             {		  
				 "if":{"properties": {"property_type":{ "const":"uint64_t"}}
			        	},
				 "then":{
				       "properties":{"property_values":{"type":"integer"}}
					 }		  
			     },
                             {
			         "if":{"properties": {"property_type":{ "const":"int64_t"}}
			              },
				"then":{
				      "properties":{"property_values":{"type":"integer"}}
				       }		  
		             },
                             {		    
			         "if":{"properties": {"property_type":{ "const":"double"}}
				      },
			         "then":{
				       "properties":{"property_values":{"type":"number"}}
					}		  
			     },
		             {		 
			        "if":{"properties": {"property_type":{ "const":"string"}}
			             },
			        "then":{
			              "properties":{"property_values":{"type":"string"}}
				       }		  
		             }
                  ]
                 }				   
            }     			   				
}					  
					 
              
                     
							 
