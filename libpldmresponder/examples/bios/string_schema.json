{
	"$schema":"http://json-schema.org/schema#",
	"$id":"https://github.com/openbmc/pldm/blob/master/libpldmresponder/examples/bios/string_schema.json",
	"$title":"JSON schema for string type attributes",
	"type":"object",
	"properties":{
			"entries":{
					"$ref":"#/definitions/entries"
					  }
				},
			"definitions":
			{
				"entries":
				{
					"type":"array",
					"items":{
						"type":"object",
						"properties":
						{
							"attribute_name":{"$ref":"#/definitions/attribute_name"},
							
							"string_type":{"$ref":"#/definitions/string_type"},
							
							"minimum_string_length":{"$ref":"#/definitions/minimum_string_length"},
							
							"maximum_string_length":{"$ref":"#/definitions/maximum_string_length"},
							
							"default_string_length":{"type":"integer"},
							
							"default_string":{"$ref":"#/definitions/default_string"},
							
							"dbus":{"$ref":"#/definitions/dbus"}
						},
						"if":{"properties":{"minimum_string_length":{"const":0}}},
						
						"then":{"properties":{"default_string_length":{"enum":[0]}}},
						
			"required":["attribute_name","string_type","minimum_string_length","maximum_string_length","default_string_length","default_string"]
						
							}
				},
					"attribute_name":
					{
					
						"type":"string",
						"pattern":"^[a-z]{3}_[a-z]+[0-9]$"
					},
					
					"string_type":
					{
					"enum":["Unknown","ASCII","Hex","UTF-8","UTF-16LE","UTF-16BE","Vendor Specific"]
					},
					
					"minimum_string_length":
					{
						"type":"integer"
					},
					
					"maximum_string_length":
					{
					"type":"integer",
					"const":100
					},
					
					"default_string":
					{
					"type":"string"
					},	
					
			    "dbus":
			   {
			   "type":"object",
			   "properties":
			    {
  				"object_path":{"$ref":"#/definitions/object_path"},

				"interface":{"$ref":"#/definitions/interface"},

				"property_name":{"$ref":"#/definitions/property_name"},

				"property_type":{"$ref":"#/definitions/property_type"}

			    },
				"required":["object_path","interface","property_type","property_name"]
			   },
			   
				"object_path":
				{
				 "type":"string",
                                 "pattern":"^/[a-zA-Z0-9_]+"
				 },
				 
				"interface":
				{
				   "type":"string",
					   
		                   "pattern":"[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+$"
				},
				
				"property_name":
				{
				"type":"string",
				"pattern":"^[A-Z][a-z]{2}_[a-z]+[0-9]$"
			    },
				
				"property_type":
				{
				"const":"string"
				}
		}
		
}		
